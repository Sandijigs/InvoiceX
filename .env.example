# InvoiceX Protocol - Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# Deployment Configuration
# ============================================

# Private key for deployment wallet (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Admin address (optional, defaults to deployer if not set)
ADMIN_ADDRESS=

# Oracle operator address (optional, defaults to deployer if not set)
ORACLE_OPERATOR=

# ============================================
# Network Configuration
# ============================================

# RPC URL for target network
# Mantle Mainnet: https://rpc.mantle.xyz
# Mantle Sepolia: https://rpc.sepolia.mantle.xyz
# Local: http://localhost:8545
RPC_URL=https://rpc.sepolia.mantle.xyz

# Chain name for verification
# Options: mantle, mantle-sepolia, localhost
CHAIN_NAME=mantle-sepolia

# ============================================
# Contract Addresses
# ============================================

# Stablecoin address (USDT/USDC) on target network
# Mantle Mainnet USDT: 0x201EBa5CC46D216Ce6DC03F6a759e8E766e956aE
# Mantle Sepolia USDT: (deploy mock or use testnet USDT)
STABLECOIN_ADDRESS=

# ============================================
# Block Explorer / Verification
# ============================================

# API key for block explorer (for contract verification)
# Mantle: Get from https://explorer.mantle.xyz/api-docs
ETHERSCAN_API_KEY=

# ============================================
# Deployed Contract Addresses
# (Fill these in after deployment)
# ============================================

INVOICE_TOKEN_ADDRESS=
KYB_REGISTRY_ADDRESS=
BUYER_REGISTRY_ADDRESS=
BUSINESS_REGISTRY_ADDRESS=
CREDIT_ORACLE_ADDRESS=
LIQUIDITY_POOL_ADDRESS=
YIELD_DISTRIBUTOR_ADDRESS=
INSURANCE_POOL_ADDRESS=
INVOICE_MARKETPLACE_ADDRESS=
INVOICEX_CORE_ADDRESS=

# ============================================
# Configuration Script Settings
# (For post-deployment configuration)
# ============================================

# Admin private key (can be same as PRIVATE_KEY or different)
ADMIN_PRIVATE_KEY=

# ============================================
# Optional: Frontend Integration
# ============================================

# Frontend URL (for CORS, webhooks, etc.)
FRONTEND_URL=http://localhost:3000

# Backend API URL (for oracle, webhooks)
BACKEND_API_URL=http://localhost:4000

# ============================================
# Optional: Testing & Development
# ============================================

# Fork testing (optional)
FORK_URL=
FORK_BLOCK_NUMBER=

# Enable gas reporting
REPORT_GAS=true

# Enable optimizer
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200
